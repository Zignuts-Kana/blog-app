<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Blog Home - Start Bootstrap Template</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="../../statics/assets/favicon.ico" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="../../statics/css/styles.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Page header with logo and tagline-->
        <header class="py-5 bg-light border-bottom mb-4">
            <div class="container d-flex">
                <div class="text-center my-5 col-12">
                    <h1 class="fw-bolder">Welcome to Blog Home!</h1>
                    <p class="lead mb-0">Here are the same awesome memory of my daily life,This is fun to sare with you.</p>
                    <hr>
                    <h2> <%- blog.title %> </h2>
                </div>
                <div class="col-2">
                  <button class="btn btn-secondary" onclick="history.back()">Back</button>
                </div>
            </div>
        </header>
        <!-- Page content-->
        <div class="container">
          <div class="row">
            <!-- Blog entries-->
            <div class="col-lg-12">
              <!-- Featured blog post-->
              <div class="card mb-6 shadow p-3 mb-5 bg-white rounded">
                
                  <img
                    class="card-img-top"
                    src="uploads/<%- blog.imageThumbnail[0].filename %>"
                    alt="..."
                />
                <div class="card-body">
                  <div class="small text-muted"><%- blog.date %></div>
                  <h2 class="card-title"><%- blog.title %></h2>
                  <p class="card-text">
                    <%- blog.description %>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="d-flex flex-row">
            <% for(let i =0 ; i<blog.images.length ; i++) {%>
            <!-- Blog post-->
              <div class="card mb-4">
                
                <img
                    class="card-img-top"
                    src="uploads/<%- blog.images[i].filename %>"
                    alt="..."
                />
              </div>
             
            <% } %>
          </div>
        </div>
<%- include('../partials/blog/footer.ejs') %>