<body>
  <!-- Sidenav -->
  <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
      <!-- Top navbar -->
      <% include ../partials/navbar %>
        <!-- Header -->
        <% include ../partials/profile/header %>
          <!-- Page content -->
          <div class="container-fluid mt--7">
            <div class="row">
              <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                <div class="card card-profile shadow">
                  <div class="row justify-content-center">
                    <div class="col-lg-3 order-lg-2">
                      <div class="card-profile-image" id="profileImageCard">
                        <a href="#">
                          <img src="img/theme/team-4-800x800.jpg" class="rounded-circle" />
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                    <!-- <div class="d-flex justify-content-between">
                <a href="#" class="btn btn-sm btn-info mr-4">Connect</a>
                <a href="#" class="btn btn-sm btn-default float-right">Message</a>
              </div> -->
                  </div>
                  <div class="card-body pt-0 pt-md-4">
                    <div class="row">
                      <div class="col">
                        <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                          <div>
                            <span class="heading">22</span>
                            <span class="description">Friends</span>
                          </div>
                          <div>
                            <span class="heading">10</span>
                            <span class="description">Photos</span>
                          </div>
                          <div>
                            <span class="heading">89</span>
                            <span class="description">Comments</span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="text-center">
                      <div id="profileNameCard">
                        <h3>
                          <%= locals.userInfo && locals.userInfo.name || 'Jessica Jones' %><span
                              class="font-weight-light">, 27</span>
                        </h3>
                      </div>
                      <div class="h5 font-weight-300">
                        <i class="ni location_pin mr-2"></i>Bucharest, Romania
                      </div>
                      <div class="h5 mt-4">
                        <i class="ni business_briefcase-24 mr-2"></i>Solution Manager
                        - Creative Tim Officer
                      </div>
                      <div>
                        <i class="ni education_hat mr-2"></i>University of Computer
                        Science
                      </div>
                      <hr class="my-4" />
                      <p>
                        Ryan — the name taken by Melbourne-raised, Brooklyn-based Nick
                        Murphy — writes, performs and records all of his own music.
                      </p>
                      <!-- <a href="#">Show more</a> -->
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xl-8 order-xl-1">
                <div class="card bg-secondary shadow">
                  <div class="card-header bg-white border-0">
                    <div class="row align-items-center">
                      <div class="col-8">
                        <h3 class="mb-0">My account</h3>
                      </div>
                      <div class="col-4 text-right">
                        <a href="/" class="btn btn-sm btn-primary">Back</a>
                      </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <form id="profileForm">
                      <h6 class="heading-small text-muted mb-4">User information</h6>
                      <div class="pl-lg-4">
                        <% if (locals.messages && messages.success) { %>
                          <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= messages.success %>
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                              </button>
                          </div>
                          <% } %>
                            <% if (locals.messages && messages.errors && messages.errors.databaseError) { %>
                              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%= messages.errors %>
                                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                  </button>
                              </div>
                              <% } %>
                                <div class="row">
                                  <div class="col-lg-12">
                                    <div class="form-group">
                                      <label class="form-control-label" for="input-name">Name</label>
                                      <input type="text" id="input-name" class="form-control form-control-alternative"
                                        name="name" placeholder="Name"
                                        value="<%= locals.userInfo && locals.userInfo.name %>" />
                                      <% if (locals.messages && messages.errors && messages.errors.name) { %>
                                        <strong class="invalid-feedback" style="display: block">
                                          <%= messages.errors.name %>
                                        </strong>
                                        <% } %>
                                    </div>
                                  </div>
                                  <div class="col-lg-12">
                                    <div class="form-group">
                                      <label class="form-control-label" for="input-email">Email address</label>
                                      <input type="email" id="input-email" class="form-control form-control-alternative"
                                        name="email" placeholder="example@example.com"
                                        value="<%= locals.userInfo && locals.userInfo.email %>" />
                                      <% if (locals.messages && messages.errors && messages.errors.username) { %>
                                        <strong class="invalid-feedback" style="display: block">
                                          <%= messages.errors.username %>
                                        </strong>
                                        <% } %>
                                    </div>
                                  </div>
                                  <div class="col-lg-12">
                                    <div class="form-group">
                                      <label class="form-control-label" for="input-profile">Profile Image</label>
                                      <input type="file" class="form-control form-control-alternative form-control"
                                        id="input-profile" name="profileImage" required />
                                      <% if (locals.messages && messages.errors && messages.errors.name) { %>
                                        <strong class="invalid-feedback" style="display: block">
                                          <%= messages.errors.name %>
                                        </strong>
                                        <% } %>
                                    </div>
                                  </div>
                                  <div class="col-lg-12 text-center">
                                    <button class="btn btn-success mt-4 mb-4" type="submit">Save</button>
                                  </div>
                                </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- Footer -->
            <% include ../partials/footer %>
          </div>
    </div>

    <!-- Include scripts -->
    <% include ../partials/scripts %>
      <script>

        <% if(typeof user != 'undefined') { %>
          const user = {
            _id: "<%= user._id %>",
            name: '<%= user.name %>',
            role: '<%= user.role %>',
            email: '<%= user.email %>',
            profileImage: '<%= user.profileImage.filename %>',
            token: '<%= user.token %>'
          };
          console.log(user);
          localStorage.setItem('user', JSON.stringify(user));
        <% } %>
        
        const profileImageCard = document.getElementById('profileImageCard');
        const profileNameCard = document.getElementById('profileNameCard');
        const headerNameChange = document.getElementById('headerNameChange');
        const profileForm = document.getElementById('profileForm');
        const email = document.getElementById('input-email');
        const name = document.getElementById('input-name')
        let userData = localStorage.getItem('user');
        if (userData) {
          userData = JSON.parse(userData);
          if (email) {
            email.value = userData.email
          }
          if (name) {
            name.value = userData.name
          }
          if (profileImageCard && userData.profileImage) {
            profileImageCard.innerHTML = `<a href="#">
                      <img
                        src='uploads/${userData.profileImage}'
                        class="rounded-circle"
                      />
                    </a>`
          }
          if (profileNameCard && userData.name) {
            profileNameCard.innerHTML = `<h3>
                    ${userData.name}
                    %><span class="font-weight-light">, 27</span>
                  </h3>`
          }
          if (headerNameChange && userData.name) {
            headerNameChange.innerText = `Hello ${userData.name}`
          }
        }

        profileForm.addEventListener('submit', (e) => {
          e.preventDefault()
          const formData = new FormData(profileForm);
          const userAction = async () => {
            const response = await fetch(`http://localhost:3000/edit/${userData._id}`, {
              method: "POST",
              body: formData,
              headers: {
                'Accept': 'application/json',
                "Authorization": `Bearer ${localStorage.getItem('token')}`
              },
            });

            const responseData = await response.json();
            const user = {
              name : responseData.name,
              email: responseData.email,
              role:responseData.role,
              token:responseData.token,
              _id : responseData._id,
              profileImage : responseData.profileImage.filename
            }
            localStorage.setItem('user',JSON.stringify(user))
            window.location.href="http://localhost:3000/"
          };

          userAction();
        })
      </script>
</body>